<?xml version = '1.0' encoding = 'windows-1252'?>
<!DOCTYPE struts-config PUBLIC "-//Apache Software Foundation//DTD Struts Configuration 1.1//EN" "http://jakarta.apache.org/struts/dtds/struts-config_1_1.dtd">
<struts-config>
   <form-beans>
      <form-bean name="LoginForm" type="com.jdevbook.chap5.LoginForm"/>
   </form-beans>
   <action-mappings>
      <action name="LoginForm" path="/Login" input="login.jsp" scope="request" type="com.jdevbook.chap5.LoginAction">
         <forward name="success" path="/result.jsp"/>
      </action>
   </action-mappings>
   <message-resources parameter="com.jdevbook.chap5.ApplicationResources"/>
</struts-config>
